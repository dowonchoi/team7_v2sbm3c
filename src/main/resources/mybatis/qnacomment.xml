<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dev.mvc.qnacomment.QnaCommentDAOInter">

  <select id="listByQnaId" resultType="dev.mvc.qnacomment.QnaCommentVO">
    SELECT * FROM qna_comment WHERE qna_id = #{qna_id} ORDER BY comment_id ASC
  </select>

  <insert id="create" parameterType="dev.mvc.qnacomment.QnaCommentVO">
    INSERT INTO qna_comment (qna_id, content) VALUES (#{qna_id}, #{content})
  </insert>

  <update id="update" parameterType="dev.mvc.qnacomment.QnaCommentVO">
    UPDATE qna_comment SET content = #{content} WHERE comment_id = #{comment_id}
  </update>

  <delete id="delete" parameterType="int">
    DELETE FROM qna_comment WHERE comment_id = #{comment_id}
  </delete>

</mapper>
